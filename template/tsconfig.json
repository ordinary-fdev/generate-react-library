{
    "compilerOptions": {
      "jsx": "react-jsx",
      "target": "ES5",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true,
      "declarationDir": "dist/types",
      "allowSyntheticDefaultImports": true, 
      "emitDeclarationOnly": true

    },
    "include": ["src"]
}
  